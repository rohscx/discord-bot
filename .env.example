# Discord Bot Configuration
DISCORD_BOT_TOKEN=your_discord_bot_token_here
TEXT_CHANNEL_ID=your_text_channel_id_here

# Voice channel to monitor (default: Lounge)
VOICE_CHANNEL_NAME=Lounge

# Time threshold in seconds (default: 7200)
# Members rejoining within this time won't trigger notifications
TIME_THRESHOLD=7200

# Office Hours â€” when enabled, notifications outside this window
# are sent WITHOUT the @here ping (the message still posts, just quietly).
# This prevents late-night gaming sessions from buzzing everyone's phone.
# Set to false to ping @here at all times.
OFFICE_HOURS_ENABLED=true
OFFICE_HOURS_START=06:00
OFFICE_HOURS_END=22:30
OFFICE_HOURS_TZ=US/Eastern
